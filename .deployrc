# Quick Reference - Hood River AI Collective Operations
# Source this file for helpful aliases: source .deployrc

# Deploy tool subcommands
alias deploy-status='./deploy.sh status'
alias deploy-pull='./deploy.sh pull'
alias deploy-force='./deploy.sh force'
alias deploy-logs='./deploy.sh logs'

# Docker aliases
alias dc='docker compose'
alias dc-up='docker compose up -d'
alias dc-down='docker compose down'
alias dc-logs='docker compose logs -f'
alias dc-ps='docker compose ps'

# Container access
alias app-shell='docker compose exec app sh'
alias app-logs='docker compose logs -f app'
alias wt-logs='docker compose logs -f watchtower'

# Health checks
alias check-health='curl -s http://localhost:8080/health && echo " âœ“ Healthy"'

# Cloudflare Tunnel
alias tunnel-status='sudo systemctl status cloudflared'
alias tunnel-restart='sudo systemctl restart cloudflared'
alias tunnel-logs='sudo journalctl -u cloudflared -f'

# Cleanup
alias docker-clean='docker system prune -a'
alias docker-usage='docker system df'

echo "Operations aliases loaded!"
echo "  deploy-status   - Container status + health"
echo "  deploy-pull     - Git pull + recreate"
echo "  deploy-force    - Force pull images"
echo "  deploy-logs     - Tail logs"
echo "  wt-logs         - Watchtower logs"
echo "  check-health    - Test health endpoint"
